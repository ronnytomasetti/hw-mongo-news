<div class="container">

	<div class="row">
		<img id="burger-header-img" class="img-responsive center-block" src="assets/img/burger.png"/>
		<h1 class="text-center">Eat-Da-Burger!</h1>
	</div>

	<div class="row text-center">
		<form method="POST" action="/burgers" class="form-inline">
			<div class="form-group">
				<input type="hidden" name="devoured" value="0"/>
				<label class="sr-only" for="burger-input">Delicious burger</label>
				<input name="burger" type="text" class="form-control" id="burger-input" placeholder="Enter a delicious burger"/>
			</div>
			<button type="submit" class="btn btn-default">SUBMIT</button>
		</form>
	</div>

	<div class="row text-center">
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading">DELICIOUS BURGERS</div>
				<div id="burgers-added" class="panel-body">

						<hr>

						{{#each burgers}}
							{{#unless devoured}}
								<form method="POST" action="/burgers/update/{{ id }}?_method=PUT" class="form-inline">
									<div class="form-group">
										<input type="hidden" name="devoured" value="1"/>
										<label class="sr-only">Delicious burger</label>
										<p class="form-control-static">{{ name }}</p>
									</div>
									<br>
									<input name="customer" type="text" class="form-control" id="customer-input" placeholder="Customer Who"/>
									<button id="burger-id{{ id }}" type="submit" class="btn btn-default">DEVOURED IT!!</button>
									<hr>
								</form>
							{{/unless}}
						{{/each}}

				</div>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="panel panel-default">
				<div class="panel-heading">DEVOURED BURGERS</div>
				<div id="burgers-devoured" class="panel-body">

						<hr>

						{{#each burgers}}
							{{#if devoured}}
								<form method="POST" action="/burgers/update/{{ id }}?_method=DELETE" class="form-inline">
									<div class="form-group">
										<label class="sr-only">Devoured burger</label>
										<p class="form-control-static">{{ name }}</p>
									</div>
									<br>
									<p class="form-control-static">This burger was devoured by {{ Customer.name }}</p>
									<br>
									<button id="burger-id{{ id }}" type="submit" class="btn btn-default btn-block">DELETE FOREVER!</button>
									<hr>
								</form>
							{{/if}}
						{{/each}}

				</div>
			</div>
		</div>
	</div>

</div>
